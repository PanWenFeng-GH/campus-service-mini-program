.container {
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0 50rpx;
}

.logo {
  overflow: hidden;
  width: 160rpx;
  height: 160rpx;
  border-radius: 40rpx;
  box-shadow: 0 0 30rpx 10rpx rgba(0, 0, 0, 0.15);
}
.center{
  display: flex;
  align-items: center;
  flex-direction: column;
}

.logo .image {
  width: 100%;
  height: 100%;
}

.welcome {
  font-size: 50rpx;
  color: green;
  margin-bottom: 30rpx;
}
.button{
  width: 700rpx;
}
.copy{
  color: #666;
  font-size: 24rpx;
}